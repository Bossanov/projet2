<!-- Page-->
<div class="page text-center">
  <!-- Page Content-->
  <main class="page-content">
    <!-- Our Customers-->
    <section class="section-98 section-sm-110">
      <div class="shell">
        <div class="range range-xs-center range-md-left">
          <div class="cell-sm-8 cell-md-6 cell-lg-5">
            <!-- Responsive-tabs-->
            <div data-type="horizontal" class="responsive-tabs responsive-tabs-classic">
              <ul data-group="tabs-group-default" class="resp-tabs-list tabs-1 text-center tabs-group-default">
                <li>Changez votre mot de passe</li>
              </ul>
              <div data-group="tabs-group-default" class="resp-tabs-container text-left tabs-group-default">
                <div>
                  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= f.error_notification %>
                    <div class="responsive-tabs-padding-none">
                      <!-- RD Mailform-->
                      <form action="#" class="text-left">
                        <div class="form-group">
                          <!--<label for="contact-email" class="form-label form-label-outside">E-mail</label> -->
                          <!-- <input id="contact-email" type="email" name="email" class="form-control"> -->
                          <%= f.input :password, required: true, autofocus: true, placeholder:"Nouveau mot de passe", type:"email", name:"email", label:false, required: true, class:"form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                        </div>
                        <div class="form-group">
                          <%= f.input :password_confirmation, label: "Confirmez votre mot de passe", required: true, class: "form-control", id:"password", name:"password", type:"password", placeholder: "Confirmez votre mot de passe" %>
                        </div>
                        <div class="offset-top-20">
                          <div class="reveal-sm-flex offset-none range-xs-middle text-center text-sm-left">
                             <%= f.button :submit, "Changez votre mot de passe", class: "btn btn-ellipse btn-primary", style: "font-weight: bold" %>
                          </div>
                        </div>
                      </form>
                    </div>
                  <% end %>
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
