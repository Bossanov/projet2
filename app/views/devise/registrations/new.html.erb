<!-- Page-->
<div class="page text-center">
  <!-- Page Content-->
  <main class="page-content">
    <!-- Our Customers-->
    <section class="section-98 section-sm-110">
      <div class="shell">
        <div class="range range-xs-center range-md-left">
          <div class="cell-sm-8 cell-md-6 cell-lg-5">
            <!-- Responsive-tabs-->
            <div data-type="horizontal" class="responsive-tabs responsive-tabs-classic">
              <ul data-group="tabs-group-default" class="resp-tabs-list tabs-1 text-center tabs-group-default">
                <li>S'inscrire</li>
              </ul>
              <div data-group="tabs-group-default" class="resp-tabs-container text-left tabs-group-default">
                <div>
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= f.error_notification %>
                    <div class="responsive-tabs-padding-none">
                      <!-- RD Mailform-->
                      <form action="#" class="text-left">
                        <div class="form-group">
                          <!--<label for="contact-email" class="form-label form-label-outside">E-mail</label> -->
                          <!-- <input id="contact-email" type="email" name="email" class="form-control"> -->
                          <%= f.input :email, required: true, autofocus: true , class: "form-control", id:"contact-email", type:"email", name:"email", placeholder: "email@exemple.com" %>
                        </div>
                        <div class="form-group">
<!--                               <label for="password" class="form-label form-label-outside">Password</label> -->
<!--                               <input id="password" name="password" type="password" class="form-control"> -->
                          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), id:"password", name:"password",label:"Mot de passe", type:"password", placeholder: "**********" %>
                        </div>
                        <div class="form-group">
<!--                               <label for="password" class="form-label form-label-outside">Password</label> -->
<!--                               <input id="password" name="password" type="password" class="form-control"> -->
                          <%= f.input :password_confirmation, required: true,label:"Confirmez votre mot de passe", id:"password", name:"password", type:"password", placeholder: "**********" %>
                        </div>
                        <div class="offset-top-20">
                          <div class="reveal-sm-flex offset-none range-xs-middle text-center text-sm-left">
<!--                                 <button type="submit" class="btn btn-ellipse btn-primary">sign in</button>
-->                                <%= f.button :submit, "S'inscrire", class: "btn btn-ellipse btn-primary", style: "font-weight: bold" %>
                          </div>
                        </div>
                      </form>
                    </div>
                  <% end %>
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>

