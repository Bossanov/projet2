                          </section>
                        </main>
                      </div>
                      <div class="offset-top-30"><a><%= link_to 'Nous contacter', contacts_path, class: 'btn btn-ellipse btn-primary btn-fullwidth'%></a></div>
                    </div>
                  </div>
                  <div data-filter="General Dentistry" class="col-md-12 isotope-item">
                    <h2>Les soins sous anesthésie générale</h2>
                    <hr class="divider divider-lg hr-sm-left-2 bg-secondary">
                    <div class="offset-top-60"><%= image_tag "http://res.cloudinary.com/dz83jh064/image/upload/c_thumb,h_440,w_870/v1520333498/Screen_Shot_2018-03-06_at_11.50.47_AM_uvlxyf.png", width:'870', height:'440', alt:"", class:'img-responsive' %>
